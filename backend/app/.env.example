# Vexel Environment Configuration
# Copy this file to .env and update the values

# Basic Configuration
PROJECT_NAME=Vexel
SERVER_NAME=localhost
SERVER_HOST=http://localhost:8000
SECRET_KEY=your-secret-key-here
TOTP_SECRET_KEY=your-totp-secret-key-here

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:4200"]

# Database Configuration
MONGO_DATABASE=vexel
MONGO_DATABASE_URI=mongodb://localhost:27017

# Email Configuration (Optional)
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Vexel
EMAILS_TO_EMAIL=admin@vexel.com
EMAILS_ENABLED=false

# First Superuser
FIRST_SUPERUSER=admin@vexel.com
FIRST_SUPERUSER_PASSWORD=admin123
USERS_OPEN_REGISTRATION=true

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# RAG Optimization Settings
ENABLE_SEMANTIC_CHUNKING=true
ENABLE_AGENTIC_CHUNKING=true
DEFAULT_CHUNK_SIZE=5000
DEFAULT_OVERLAP=100
MAX_CHUNK_SIZE=10000
MIN_CHUNK_SIZE=500

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
METRICS_RETENTION_DAYS=30
PERFORMANCE_ALERT_THRESHOLD=10.0
MAX_METRICS_IN_MEMORY=10000

# User Tier Limits - Free Tier
FREE_TIER_MONTHLY_LIMIT=50
FREE_TIER_MAX_FILE_SIZE_MB=10
FREE_TIER_MAX_STORAGE_GB=1

# User Tier Limits - Premium Tier
PREMIUM_TIER_MONTHLY_LIMIT=500
PREMIUM_TIER_MAX_FILE_SIZE_MB=50
PREMIUM_TIER_MAX_STORAGE_GB=10

# User Tier Limits - Enterprise Tier
ENTERPRISE_TIER_MONTHLY_LIMIT=-1
ENTERPRISE_TIER_MAX_FILE_SIZE_MB=100
ENTERPRISE_TIER_MAX_STORAGE_GB=100

# Chunking Strategy Settings
SEMANTIC_CHUNKING_SIMILARITY_THRESHOLD=0.6
AGENTIC_CHUNKING_MODEL=gpt-4
MARKDOWN_CHUNKING_PRESERVE_HEADERS=true

# Content Analysis Settings
ENABLE_CONTENT_ANALYSIS=true
CONTENT_ANALYSIS_TIMEOUT_SECONDS=30
AUTO_STRATEGY_SELECTION=true

# Feature Flags
ENABLE_PARALLEL_PROCESSING=true
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_ADVANCED_CHUNKING=true

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Optional: Sentry for Error Tracking
SENTRY_DSN=your-sentry-dsn-here
